<UserControl x:Class="CognexEdgeHistorian.MVVM.View.DataHistorianView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CognexEdgeHistorian.MVVM.View"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:core="clr-namespace:CognexEdgeHistorian.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1.75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="3" Background="{StaticResource DarkBlueSecondary}"
                CornerRadius="5"
                Margin="5">
            <StackPanel Orientation="Horizontal">
                <RadioButton Style="{StaticResource TopRibbonItem}"
                             Width="100" Height="40"
                             Margin="10 0 0 0"
                             Background="{StaticResource AdamsBlue}"
                             Content="Data Bindings"/>
                <RadioButton Style="{StaticResource TopRibbonItem}"
                             Width="100" Height="40"
                             Margin="10 0 0 0"
                             Background="{StaticResource AdamsBlue}"
                             Content="Filters"/>
                <RadioButton Style="{StaticResource TopRibbonItem}"
                             Width="100" Height="40"
                             Margin="10 0 0 0"
                             Background="{StaticResource AdamsBlue}"
                             Content="Saved Profiles"/>
                <RadioButton Style="{StaticResource TopRibbonItem}"
                             Width="100" Height="40"
                             Margin="10 0 0 0"
                             Background="{StaticResource AdamsBlue}"
                             Content="Settings"/>
                <RadioButton Style="{StaticResource TopRibbonItem}"
                             Width="100" Height="40"
                             Margin="10 0 0 0"
                             Background="{StaticResource AdamsBlue}"
                             Content="Connections"
                             Command="{Binding NavigateConnectionsCommand}"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.ColumnSpan="3" 
                x:Name="BottomBorder"
                Background="{StaticResource DarkBlueSecondary}"
                CornerRadius="5"
                Margin="5">
        </Border>
        <Border Grid.Row="2"
                Height="40"
                VerticalAlignment="Top"
                Background="{StaticResource Black}"
                CornerRadius="5"
                Margin="15 15 10 10">
            <Button x:Name="AddNewChartBtn"
                    Style="{StaticResource Button}" 
                    Background="{StaticResource AdamsBlue}"
                    Foreground="LightGray"
                    Content="Add New Chart"
                    Command="{Binding AddNewChartCommand}"/>
        </Border>
        <Border Grid.Row="2"
                VerticalAlignment="Stretch"
                Margin="15 65 10 15"
                Background="{StaticResource AdamsBlue}"
                CornerRadius="5">
        </Border>
        <Border Grid.Row="1" Grid.Column="1"
                Background="{StaticResource AdamsBlue}"
                Margin="10 15"
                CornerRadius="5">
            <oxy:PlotView Model="{Binding ActivePlotModel}" Margin="10" Background="Transparent"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2"
                Margin="10 15 20 15"
                Background="{StaticResource AdamsBlue}"
                CornerRadius="5">
            <StackPanel x:Name="LineGraphProps">
                <TextBlock Text="Properties" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource AdamsWhite}" Margin="0 5 0 0"/>
                <core:PropertyTextBox Style="{StaticResource DataViewPropertyTextBlock}" PropName="Graph Name: " Margin="0 2 0 0" Text="{Binding ActiveGraphProperties.Name, Mode=TwoWay}"/>
                <core:PropertyTextBox Style="{StaticResource DataViewPropertyTextBlock}" PropName="X Axis Title: " Text="{Binding ActiveGraphProperties.XAxisTitle, Mode=TwoWay}"/>
                <core:PropertyTextBox Style="{StaticResource DataViewPropertyTextBlock}" PropName="Y Axis Title: " Text="{Binding ActiveGraphProperties.YAxisTitle, Mode=TwoWay}"/>
                <core:PropertyTextBox Style="{StaticResource DataViewPropertyTextBlock}" PropName="Axis Color: " Text="{Binding ActiveGraphProperties.AxisColor, Mode=TwoWay}"/>
                <Button Content="Press me" Command="{Binding TempCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
