<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:CognexEdgeHistorian.Core">
    <Style x:Key="DataViewPropertyTextBlock" TargetType="core:PropertyTextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource AdamsWhite}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="core:PropertyTextBox">
                    <Border Background="{StaticResource AdamsDarkBlue}" CornerRadius="5" Margin="10">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{TemplateBinding PropName}" />
                            <TextBox Grid.Column="1" Foreground="{StaticResource AdamsWhite}" Background="Transparent"
                                     BorderThickness="0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>