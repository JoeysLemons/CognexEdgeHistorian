<ui:UiPage x:Class="EdgePcConfigurationApp.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EdgePcConfigurationApp.Views.Pages"
    xmlns:models="clr-namespace:EdgePcConfigurationApp.Models"
    xmlns:helpers="clr-namespace:EdgePcConfigurationApp.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <ui:UiPage.Resources>
        <Color x:Key="TextOnAccentFillColorPrimary">#FFFF</Color>
        <Color x:Key="SystemAccentColorSecondary">#5762D5</Color>
    </ui:UiPage.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <ui:TextBox x:Name="IpAddress" Width="310" Margin="10" Text="{Binding ViewModel.Endpoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <ui:Button Content="Connect"
                       Margin="5"
                       Command="{Binding ViewModel.ConnectToCameraCommand}"
                       CommandParameter="{Binding ViewModel.Endpoint}"/>
            <ui:Button Content="Disconnect" 
                       Margin="5"
                       Command="{Binding ViewModel.DisconnectFromCameraCommand}"
                       CommandParameter="{Binding ElementName=DeviceConnectionPane, Path=SelectedItem}"/>
        </StackPanel>
        <ListBox x:Name="DeviceConnectionPane"
                 Margin="10" Grid.Row="1" SelectionMode="Single"
                 SelectedItem="{Binding ViewModel.SelectedCamera}"
                 ItemsSource="{Binding ViewModel.CognexCameras}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock x:Name="SessionName" Text="{Binding Session}"/>
                        <TextBlock x:Name="SessionEndpoint" Text="{Binding Endpoint}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Border CornerRadius="5" Grid.Row="1" Grid.Column="1" Margin="10">
            <ScrollViewer Focusable="True">
                <TreeView x:Name="TagBrowser" ItemsSource="{Binding ViewModel.Tags}" ScrollViewer.CanContentScroll="True">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type models:Tag}" ItemsSource="{Binding Children}">
                            <ToggleButton Command="{Binding SubscribeCommand}" Width="300" HorizontalContentAlignment="Left">
                                <TextBlock Text="{Binding Name}" FontSize="12"/>
                            </ToggleButton>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </ScrollViewer>
        </Border>
    </Grid>
</ui:UiPage>
